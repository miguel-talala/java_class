package exEstruturaSequencial;

import java.util.Locale;
import java.util.Scanner;

/*Programa que irá ler medidas de largura e altura de um terreno retangular,
calcular a area desse retangulo e colocar o preço da area*/
public class application._poo.modificadoresDeAcesso.mod.SobreCarga {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Locale.setDefault(Locale.US);
		double altura,largura,precoM, area, preco;
		System.out.println("Digite o valor da altura da casa: ");
		altura = sc.nextDouble();
		System.out.println("Digite o valor da largura da casa: ");
		largura = sc.nextDouble();
		System.out.println("Digite o preço por metro quadrado: ");
		precoM = sc.nextDouble();
		area = altura * largura;
		
		preco = area * precoM;
		System.out.printf("Area : %d", area);
		System.out.printf("Preço: %d", preco);
		
		
		
		
		
		
		
		sc.close();
	} 
}
